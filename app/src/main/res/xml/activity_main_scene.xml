<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/firstCard"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:alpha="0.1"
            android:layout_marginRight="4dp"
            android:background="@color/primart_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guid"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/secondCard"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:alpha="0.1"
            android:layout_marginRight="4dp"
            android:background="@color/primart_color"
            app:layout_constraintLeft_toLeftOf="@id/guid"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/thirdCard"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:alpha="0.1"
            android:background="@color/primart_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guid"
            app:layout_constraintTop_toBottomOf="@id/firstCard"
            />
        <Constraint
            android:id="@+id/fourthCard"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:alpha="0.1"
            android:layout_marginTop="8dp"
            android:background="@color/primart_color"
            app:layout_constraintLeft_toLeftOf="@id/guid"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/secondCard"
            />
        <Constraint
            android:id="@+id/fifthCard"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:alpha="0.1"
            android:background="@color/primart_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guid"
            app:layout_constraintTop_toBottomOf="@id/thirdCard"
            />
        <Constraint
            android:id="@+id/sixthCard"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:alpha="0.1"
            android:layout_marginTop="8dp"
            android:background="@color/primart_color"
            app:layout_constraintLeft_toLeftOf="@id/guid"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fourthCard"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/firstCard"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:alpha="1"
            android:scaleX="1.1"
            android:rotation="360"
            android:translationX="1dp"
            android:layout_marginRight="4dp"
            android:background="@color/primart_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guid"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/secondCard"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:alpha="1"
            android:scaleX="1.1"
            android:rotation="360"
            android:translationX="1dp"
            android:layout_marginRight="4dp"
            android:background="@color/primart_color"
            app:layout_constraintLeft_toLeftOf="@id/guid"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/thirdCard"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:alpha="1"
            android:scaleX="1.1"
            android:rotation="360"
            android:translationX="1dp"
            android:background="@color/primart_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guid"
            app:layout_constraintTop_toBottomOf="@id/firstCard"
            />
        <Constraint
            android:id="@+id/fourthCard"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:alpha="1"
            android:scaleX="1.1"
            android:rotation="360"
            android:translationX="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/primart_color"
            app:layout_constraintLeft_toLeftOf="@id/guid"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/secondCard"
            />
        <Constraint
            android:id="@+id/fifthCard"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:alpha="1"
            android:scaleX="1.1"
            android:rotation="360"
            android:translationX="1dp"
            android:background="@color/primart_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guid"
            app:layout_constraintTop_toBottomOf="@id/thirdCard"
            />
        <Constraint
            android:id="@+id/sixthCard"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:alpha="1"
            android:scaleX="1.1"
            android:rotation="360"
            android:translationX="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/primart_color"
            app:layout_constraintLeft_toLeftOf="@id/guid"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fourthCard"
            />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1000"
        >
        <OnClick
            app:targetId="@id/fifthCard"
            app:clickAction="toggle"/>
    </Transition>
    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1000"
        >
        <OnClick
            app:targetId="@id/secondCard"
            app:clickAction="toggle"/>
    </Transition>
    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1000"
        >
        <OnClick
            app:targetId="@id/thirdCard"
            app:clickAction="toggle"/>
    </Transition>
    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1000"
        >
        <OnClick
            app:targetId="@id/thirdCard"
            app:clickAction="toggle"/>
    </Transition>
    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1000"
        >
        <OnClick
            app:targetId="@id/fourthCard"
            app:clickAction="toggle"/>
    </Transition>
    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1000"
        >
        <OnClick
            app:targetId="@id/sixthCard"
            app:clickAction="toggle"/>
    </Transition>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1000">
        <OnClick
            app:targetId="@id/firstCard"
            app:clickAction="toggle"/>
    </Transition>
</MotionScene>
